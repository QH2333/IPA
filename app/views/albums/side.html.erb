<% if @albums.include? @album %>
  <svg xmlns="http://www.w3.org/2000/svg" version="1.1" class="pointer">
    <polygon points="0,0 5,5 0,10"/>
  </svg>
<% end %>
<% @albums.each do |a| %>
  <ul id="first_class">
    <li><%= link_to a.name, a, class: "first_li#{" active" if a == @album}" %></li>
  </ul>
<% end %>
<%= paginate @albums, outer_window: 1, window: 1, params: { controller: 'albums', action: 'side'} %>